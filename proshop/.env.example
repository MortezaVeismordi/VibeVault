# ===========================
# DJANGO SETTINGS
# ===========================
# Environment: development, production, testing
DJANGO_ENV=development

# Secret key for cryptography - CHANGE IN PRODUCTION!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-dev-key-change-in-production

# Debug mode - MUST BE False in production
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===========================
# DATABASE CONFIGURATION
# ===========================
# Option 1: SQLite (Development - default)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Option 2: PostgreSQL (Production)
# Uncomment and configure for PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/proshop_db
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=proshop_db
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# ===========================
# REDIS CONFIGURATION
# ===========================
# Format: redis://[username:password@]host:port[/database]
REDIS_URL=redis://localhost:6379/1

# ===========================
# EMAIL CONFIGURATION
# ===========================
# Backend: console (development), smtp (production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Server settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=noreply@proshop.com

# ===========================
# CORS CONFIGURATION
# ===========================
# Allowed origins (comma-separated) - add your frontend URL here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================
# STRIPE PAYMENT (Optional)
# ===========================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================
# AWS S3 STORAGE (Optional)
# ===========================
# For file uploads to S3 instead of local storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ===========================
# SENTRY ERROR TRACKING (Optional)
# ===========================
# Get this from: https://sentry.io
SENTRY_DSN=
